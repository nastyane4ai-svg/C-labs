<Window TextBoxBase.TextChanged="Window_TextChanged" x:Class="WpfRoutedEvent_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Margin="98,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name ="radBut1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="454,125,0,0" VerticalAlignment="Top" Height="18" AutomationProperties.Name="radBut1"/>
        <RadioButton x:Name ="radBut2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="454,193,0,0" VerticalAlignment="Top" Width="182" AutomationProperties.Name="radBut2"/>
        <RadioButton x:Name ="radBut3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="454,260,0,0" VerticalAlignment="Top" Width="182" AutomationProperties.Name="radBut3"/>

    </Grid>
</Window>
