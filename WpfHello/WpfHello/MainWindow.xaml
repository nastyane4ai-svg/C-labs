<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Главное окно" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing" >
    
        
    
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="171,0,0,0" Grid.Column="1">Пуск</Label>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="43,66,0,0" VerticalAlignment="Top" AutomationProperties.Name="setBut" Click="setBut_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="43,125,0,0" VerticalAlignment="Top" AutomationProperties.Name="retBut" Click="retBut_Click" Width="56" Grid.ColumnSpan="2"/>
        <TextBox x:Name="setText" HorizontalAlignment="Left" Margin="128,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" AutomationProperties.Name="setText" Height="20" TextChanged="setText_TextChanged"/>
        <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="128,113,0,0" VerticalAlignment="Top" AutomationProperties.Name="retLabel" Width="312" Height="32"/>
        <Button x:Name="New_Win" Content="New Win" HorizontalAlignment="Left" Margin="43,197,0,0" VerticalAlignment="Top" Width="56" Click="New_Win_Click"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Margin="139,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="50" Width="75"/>

    </Grid>
</Window>