<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Главное окно"
        Height="350"
        Width="500"
        MinHeight="350"
        MinWidth="300"
        Closing="Window_Closing">

    <DockPanel>

       
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Копировать" CommandTarget="{Binding ElementName=MainWindow}" Command="Copy"/>
                <MenuItem Header="Вырезать" CommandTarget="{Binding ElementName=MainWindow}" Command="Cut"/>
                <MenuItem Header="Вставить" CommandTarget="{Binding ElementName=MainWindow}" Command="Paste"/>
            </MenuItem>
        </Menu>

        
        <Label x:Name="lbl"
               DockPanel.Dock="Top"
               HorizontalAlignment="Center">
            Пуск
        </Label>

        
        <StatusBar x:Name="stb" DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="stb1">
                <TextBlock>Статусная панель</TextBlock>
            </StatusBarItem>

            <Separator/>

            <StatusBarItem x:Name="stb2">
                <TextBlock>Online</TextBlock>
            </StatusBarItem>

            <StatusBarItem x:Name="stb3">
                <TextBlock/>
            </StatusBarItem>
        </StatusBar>

        
        <Grid Button.Click="Grid_Click">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            
            <Button x:Name="setBut" Grid.Column="0" Grid.Row="0" Content="Set Name" Margin="10,15" Width="75"/>
            <Button x:Name="retBut" Grid.Column="0" Grid.Row="1" Content="Ret Name" Margin="10,15" Width="75"/>
            <Button x:Name="New_Win" Grid.Column="0" Grid.Row="2" Content="New Win" Margin="10,15" Width="75" Click="New_Win_Click"/>

            
            <TextBox x:Name="setText" Grid.Column="1" Grid.Row="0" Margin="10,15" Height="23" TextChanged="setText_TextChanged"/>
            <Label x:Name="retLabel" Grid.Column="1" Grid.Row="1" Margin="10,15" Content=""/>
            <TextBlock x:Name="txtBlock" Grid.Column="1" Grid.Row="2" Margin="10,15" TextWrapping="Wrap"/>

        </Grid>
    </DockPanel>
</Window>